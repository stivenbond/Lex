<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Lex.ViewModels"
             x:Class="Lex.Views.LeftSidebarView"
             x:DataType="vm:LeftSidebarViewModel">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            
        </StackPanel>
        <ListBox ItemsSource="{Binding LessonTopics}"
                 SelectedItem="{Binding SelectedLessonTopic}"
                 Width="200">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Topic}" Padding="5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>